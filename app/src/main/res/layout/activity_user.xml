<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <!-- Card de Informações do Usuário -->
    <androidx.cardview.widget.CardView
        android:id="@+id/user_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_user_profile"
                android:contentDescription="Profile Picture" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wellygton Mario"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Risco de Deslizamento"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progresso do Mês -->
    <TextView
        android:id="@+id/progresso_do_mes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progresso do mês"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/user_info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Grade de Progresso -->
    <GridLayout
        android:id="@+id/progresso_do_mes_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@id/progresso_do_mes_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Adicione os quadrados de progresso aqui -->
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/progress_square" />
        <!-- Repita o TextView acima para preencher a grade -->
    </GridLayout>

    <!-- Botões de Funções -->
    <GridLayout
        android:id="@+id/funcoes_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/progresso_do_mes_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <!-- Botões -->
        <Button
            android:id="@+id/telefones_uteis_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Telefones Úteis"
            android:drawableTop="@drawable/ic_phone"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/encontre_abrigos_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Encontre Abrigos"
            android:drawableTop="@drawable/ic_shelter"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/alertas_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Alertas"
            android:drawableTop="@drawable/ic_alert"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/busca_de_resgatados_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Busca de Resgatados"
            android:drawableTop="@drawable/ic_rescue"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/aprenda_jogando_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Aprenda Jogando"
            android:drawableTop="@drawable/ic_learn"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/em_breve_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Em Breve"
            android:drawableTop="@drawable/ic_soon"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
